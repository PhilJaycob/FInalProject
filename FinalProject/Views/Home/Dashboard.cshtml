@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Location</title>
    <link rel="stylesheet" href="@Url.Content("~/Content/materialize.css")">
    <link rel="stylesheet" href="@Url.Content("~/Content/CSS/Profile.css")">
</head>
<body>
    <nav>
        <div class="nav-wrapper">
            <a href="@Url.Action("Dashboard", "Home")" class="brand-logo" style="display: flex; align-items: center;">
                <img src="@Url.Content("~/Content/Images/UST_MyBidet.png")" alt="UST MyBidet Logo" style="height: 40px; margin-right: 10px;">
                UST MyBidet
            </a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                <li><a href="@Url.Action("Dashboard", "Home")">Home</a></li>
                <li><a href="@Url.Action("Profile", "Home")">Profile</a></li>
                <li><a href="@Url.Action("Aboutus", "Home")">About Us</a></li>
                <li><a href="@Url.Action("Logout", "Home")">Logout</a></li>
            </ul>
        </div>
    </nav>

    <div class="content">
        <!-- Map Container -->
        <div id="map" style="height: 500px; width: 100%;"></div>
    </div>

    <script src="@Url.Content("~/Scripts/materialize.js")"></script>

    <!-- Google Maps API Script -->
    <script defer
            src="https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY&callback=initMap">
    </script>
    <script>
        // Initialize the map
        function initMap() {
            try {
                // Coordinates for the location
                const location = { lat: 40.7128, lng: -74.0060 };  // Change these coordinates to your location

                // Create the map centered on the location
                const map = new google.maps.Map(document.getElementById("map"), {
                    zoom: 12,
                    center: location,
                });

                // Add a marker
                const marker = new google.maps.Marker({
                    position: location,
                    map: map,
                    title: "Our Location"
                });
            } catch (error) {
                console.error("Failed to initialize the map:", error);
            }
        }
    </script>
</body>
</html>

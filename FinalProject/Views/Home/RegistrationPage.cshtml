@{
    Layout = "~/Views/Shared/_RegistrationLayout.cshtml";
}

<body class="background" ng-app="FinalProject" ng-controller="FinalProjectController">

    <div class="valign-wrapper" style="min-height: 100vh;">
        <div class="container">
            <div class="row center-align">
                <div class="col s12 m8 l12 offset-m2 offset-l3">
                    <div class="card white" style="max-width: 600px; padding: 20px; border-radius: 15px; box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);">
                        <div class="card-content white-text">
                            <div class="row">

                                <!-- Image and Sign Up Text beside each other, centered -->
                                <div class="col s12 header-section">
                                    <h4 class="black-text">Sign Up</h4>
                                    <p class="grey-text text-darken-1">Create your account below.</p>
                                </div>

                                <!-- Registration Form -->
                                <form name="registrationForm" class="col s12" novalidate ng-submit="submitForm(registrationForm)">

                                    <!-- First, Middle, and Last Name -->
                                    <div class="row">
                                        <div class="input-field col s12 m4">
                                            <i class="material-icons orange-text accent-4 prefix">account_circle</i>
                                            <input id="firstName" type="text" class="validate" ng-model="fName" name="firstName" required ng-maxlength="30">
                                            <label for="firstName">First Name</label>
                                            <span ng-show="registrationForm.firstName.$touched && registrationForm.firstName.$error.required" class="red-text">First Name is required.</span>
                                            <span ng-show="registrationForm.firstName.$touched && registrationForm.firstName.$error.maxlength" class="red-text">First Name must not exceed 30 characters.</span>
                                        </div>
                                        <div class="input-field col s12 m4">
                                            <i class="material-icons orange-text accent-4 prefix"></i>
                                            <input id="middleName" type="text" class="validate" ng-model="mName" name="middleName" ng-maxlength="30">
                                            <label for="middleName">Middle Name</label>
                                            <span ng-show="registrationForm.middleName.$touched && registrationForm.middleName.$error.maxlength" class="red-text">Middle Name must not exceed 30 characters.</span>
                                        </div>
                                        <div class="input-field col s12 m4">
                                            <i class="material-icons orange-text accent-4 prefix"></i>
                                            <input id="lastName" type="text" class="validate" ng-model="lName" name="lastName" required ng-maxlength="30">
                                            <label for="lastName">Last Name</label>
                                            <span ng-show="registrationForm.lastName.$touched && registrationForm.lastName.$error.required" class="red-text">Last Name is required.</span>
                                            <span ng-show="registrationForm.lastName.$touched && registrationForm.lastName.$error.maxlength" class="red-text">Last Name must not exceed 30 characters.</span>
                                        </div>
                                    </div>

                                    <!-- Email -->
                                    <div class="row">
                                        <div class="input-field col s12">
                                            <i class="material-icons orange-text accent-4 prefix">email</i>
                                            <input id="email" type="email" class="validate" ng-model="Email" name="email" required>
                                            <label for="email">Email</label>
                                            <span ng-show="registrationForm.email.$touched && registrationForm.email.$error.required" class="red-text">Email is required.</span>
                                            <span ng-show="registrationForm.email.$touched && registrationForm.email.$error.email" class="red-text">Invalid email format.</span>
                                        </div>
                                    </div>

                                    <!-- Password -->
                                    <div class="row">
                                        <div class="input-field col s12">
                                            <i class="material-icons orange-text accent-4 prefix">lock</i>
                                            <input id="password" type="password" class="validate" ng-model="pass" name="password" required minlength="6">
                                            <label for="password">Password</label>
                                            <span ng-show="registrationForm.password.$touched && registrationForm.password.$error.required" class="red-text">Password is required.</span>
                                            <span ng-show="registrationForm.password.$touched && registrationForm.password.$error.minlength" class="red-text">Password must be at least 6 characters long.</span>
                                        </div>
                                    </div>

                                    <!-- Phone and Address -->
                                    <div class="row">
                                        <div class="input-field col s12">
                                            <i class="material-icons orange-text accent-4 prefix">phone</i>
                                            <input id="phone" type="tel" class="validate" ng-model="uPhone" name="phone" ng-pattern="/^\d{11}$/" required>
                                            <label for="phone">Phone No.</label>
                                            <span ng-show="registrationForm.phone.$touched && registrationForm.phone.$error.required" class="red-text">Phone No. is required.</span>
                                            <span ng-show="registrationForm.phone.$touched && registrationForm.phone.$error.pattern" class="red-text">Phone number must be 11 digits.</span>
                                        </div>
                                    </div>

                                    <div class="input-field col s12">
                                        <i class="material-icons orange-text accent-4 prefix">home</i>
                                        <input id="address" type="text" class="validate" ng-model="uAddress" name="address">
                                        <label for="address">Address</label>
                                    </div>

                                    <!-- Submit and Clear -->
                                    <div class="row">
                                        <div class="col s12 m6">
                                            <button class="btn waves-effect waves-light orange darken-4" type="submit" ng-disabled="registrationForm.$invalid" ng-click="submitFunc()">
                                                Submit
                                                <i class="material-icons right">send</i>
                                            </button>
                                        </div>
                                        <div class="col s12 m6">
                                            <button class="btn waves-effect waves-light red" type="button" ng-click="cancelFunc()">
                                                Clear
                                                <i class="material-icons right">refresh</i>
                                            </button>
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<body class="gradient-background">

    <div class="valign-wrapper" style="height: 100vh;">
        <div class="container" style="border-radius: 20px;">

            <div class="row center-align">
                <div class="col s12 m8 l6 offset-m2 offset-l3">
                    <div class="card white" style="border-radius: 20px;">

                        <div class="card-content black-text">

                            <h5 class="center-align">Login</h5>

                            <div class="row">
                                <form class="col s12">
                                    <div class="row">

                                        <div class="row" ng-init="Fetchfunc()">
                                            <div class="input-field col s12 m12 l12">
                                                <i class="material-icons prefix">account_circle</i>
                                                <input id="Uname" type="text" class="validate" ng-model="Username">
                                                <label for="Uname">Username</label>
                                            </div>

                                            <div class="input-field col s12 m12 l12" style="margin-top: 10px;">
                                                <i class="material-icons prefix">lock_outline</i>
                                                <input id="Upassword2" type="password" class="validate" ng-model="Upassword2">
                                                <label for="Upassword2">Password</label>
                                            </div>

                                            <div class="col s12 m12 l12" style="margin-top: 10px;">
                                                <div class="col s12 m6 l6">
                                                    <button class="btn waves-effect waves-light col s12 m12 l12 green" ng-click="Loginvalidation()" style="font-size: 14px; font-weight: 500; border-radius: 20px;">
                                                        SIGN IN
                                                        <i class="material-icons left">send</i>
                                                    </button>
                                                </div>

                                                <div class="col s12 m6 l6">
                                                    <button class="btn waves-effect waves-light col s12 m12 l12 red" ng-click="Cancelfunc()" style="font-size: 14px; font-weight: 500; border-radius: 20px;">
                                                        CANCEL
                                                        <i class="material-icons left">cancel</i>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            </div>
        </div>
    </body>

